@model List<DocAttestation.Models.Application>
@{
    ViewData["Title"] = "My Applications";
}

<div class="row">
    <div class="col-md-12">
        <div class="page-header mb-4" style="margin-top:40px">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h2 class="mb-0"><i class="bi bi-file-text"></i> My Applications</h2>
                    <p class="mb-0 mt-2 opacity-75">Manage and track your document attestation applications</p>
                </div>
                <a asp-controller="Profile" asp-action="Step1" class="btn btn-light btn-lg">
                    <i class="bi bi-plus-circle"></i> Create New Application
                </a>
            </div>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                    <h4 class="mt-3 mb-2">No Applications Yet</h4>
                    <p class="text-muted mb-4">You have not submitted any applications yet. Start by creating your first application.</p>
                    <a asp-controller="Profile" asp-action="Step1" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle"></i> Create Your First Application
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Application Number</th>
                        <th>Document Type</th>
                        <th>Issuing Authority</th>
                        <th>Status</th>
                        <th>Submitted Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var app in Model)
                    {
                        <tr>
                            <td>@app.ApplicationNumber</td>
                            <td>@app.DocumentType</td>
                            <td>@app.IssuingAuthority</td>
                            <td>
                                @switch (app.Status)
                                {
                                    case DocAttestation.Models.ApplicationStatus.Submitted:
                                        <span class="badge bg-primary">Submitted</span>
                                        break;
                                    case DocAttestation.Models.ApplicationStatus.UnderVerification:
                                        <span class="badge bg-info">Under Verification</span>
                                        break;
                                    case DocAttestation.Models.ApplicationStatus.UnderSupervision:
                                        <span class="badge bg-warning">Under Supervision</span>
                                        break;
                                    case DocAttestation.Models.ApplicationStatus.UnderAttestation:
                                        <span class="badge bg-secondary">Under Attestation</span>
                                        break;
                                    case DocAttestation.Models.ApplicationStatus.Approved:
                                        <span class="badge bg-success">Approved</span>
                                        break;
                                    case DocAttestation.Models.ApplicationStatus.Rejected:
                                        <span class="badge bg-danger">Rejected</span>
                                        break;
                                    case DocAttestation.Models.ApplicationStatus.SentBack:
                                        <span class="badge bg-warning">Sent Back</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@app.Status</span>
                                        break;
                                }
                            </td>
                            <td>@app.SubmittedAt.ToShortDateString()</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@app.Id" class="btn btn-sm btn-info">View</a>
                                @if (app.Status == DocAttestation.Models.ApplicationStatus.Approved)
                                {
                                    <a asp-action="Download" asp-route-id="@app.Id" class="btn btn-sm btn-success">Download</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

