@model List<DocAttestation.Models.Application>
@{
    ViewData["Title"] = "Manage Applications";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-file-text"></i> Manage Applications</h2>
            <div>
                <form asp-action="AutoAssignApplications" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-arrow-repeat"></i> Auto Assign (200 per officer/day)
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model == null || !Model.Any())
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                    <h4 class="mt-3 mb-2">No Applications</h4>
                    <p class="text-muted">No applications have been submitted yet.</p>
                </div>
            </div>
        }
        else
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Application Number</th>
                                    <th>Applicant</th>
                                    <th>Document Type</th>
                                    <th>Status</th>
                                    <th>Assigned To</th>
                                    <th>Submitted Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var app in Model)
                                {
                                    var currentStep = app.WorkflowSteps?.FirstOrDefault(s => s.Status == DocAttestation.Models.WorkflowStepStatus.Pending);
                                    <tr>
                                        <td>@app.ApplicationNumber</td>
                                        <td>@app.ApplicantProfile?.FullName</td>
                                        <td>@app.DocumentType</td>
                                        <td>
                                            @switch (app.Status)
                                            {
                                                case DocAttestation.Models.ApplicationStatus.Submitted:
                                                    <span class="badge bg-primary">Submitted</span>
                                                    break;
                                                case DocAttestation.Models.ApplicationStatus.UnderVerification:
                                                    <span class="badge bg-info">Under Verification</span>
                                                    break;
                                                case DocAttestation.Models.ApplicationStatus.UnderSupervision:
                                                    <span class="badge bg-warning">Under Supervision</span>
                                                    break;
                                                case DocAttestation.Models.ApplicationStatus.UnderAttestation:
                                                    <span class="badge bg-secondary">Under Attestation</span>
                                                    break;
                                                case DocAttestation.Models.ApplicationStatus.Approved:
                                                    <span class="badge bg-success">Approved</span>
                                                    break;
                                                case DocAttestation.Models.ApplicationStatus.Rejected:
                                                    <span class="badge bg-danger">Rejected</span>
                                                    break;
                                                case DocAttestation.Models.ApplicationStatus.SentBack:
                                                    <span class="badge bg-warning">Sent Back</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            @if (currentStep != null)
                                            {
                                                <span>@currentStep.AssignedToUser?.FullName</span>
                                                <small class="text-muted d-block">(@currentStep.Level)</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not Assigned</span>
                                            }
                                        </td>
                                        <td>@app.SubmittedAt.ToString("dd MMM yyyy")</td>
                                        <td>
                                            <a asp-action="ViewApplicationDetails" asp-route-id="@app.Id" class="btn btn-sm btn-info">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            @if (app.Status == DocAttestation.Models.ApplicationStatus.Submitted || 
                                                 app.Status == DocAttestation.Models.ApplicationStatus.UnderSupervision || 
                                                 app.Status == DocAttestation.Models.ApplicationStatus.UnderAttestation)
                                            {
                                                <a asp-action="AssignApplication" asp-route-id="@app.Id" class="btn btn-sm btn-primary">
                                                    <i class="bi bi-person-check"></i> Assign
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

