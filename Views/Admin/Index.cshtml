@{
    ViewData["Title"] = "Admin Dashboard";
    var usersWithRoles = ViewBag.UsersWithRoles as List<dynamic>;
}

<div class="row">
    <div class="col-md-12">
        <h2>Admin Dashboard</h2>
        <hr />

        <div class="mb-3">
            <a asp-action="CreateOfficer" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Create Officer Account
            </a>
            <a asp-action="Applications" class="btn btn-success ms-2">
                <i class="bi bi-file-text"></i> Manage Applications
            </a>
        </div>

        <!-- Test Email Section -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-envelope"></i> Test Email Service</h5>
            </div>
            <div class="card-body">
                <form asp-action="TestEmail" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-8">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter email address to test" required />
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-info w-100">
                                <i class="bi bi-send"></i> Send Test Email
                            </button>
                        </div>
                    </div>
                    <small class="text-muted">This will send a test email to verify the email service is working correctly.</small>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5>System Users</h5>
            </div>
            <div class="card-body">
                @if (usersWithRoles != null && usersWithRoles.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Roles</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in usersWithRoles)
                                {
                                    <tr>
                                        <td>@item.User.FullName</td>
                                        <td>@item.User.Email</td>
                                        <td>@(item.User.PhoneNumber ?? "-")</td>
                                        <td>
                                            @foreach (var role in item.Roles)
                                            {
                                                <span class="badge bg-primary me-1">@role</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.User.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>@item.User.CreatedAt.ToString("dd MMM yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No users found.</p>
                }
            </div>
        </div>
    </div>
</div>

