@model DocAttestation.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Document Attestation Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            height: 100vh;
            overflow: hidden;
            font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
            margin: 0;
            padding: 0;
            background: #f5f7fa;
        }
        
        .login-wrapper {
            display: flex;
            height: 100vh;
            max-height: 100vh;
            overflow: hidden;
            background: #ffffff;
        }
        
        .login-left {
            flex: 0 0 45%;
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            padding: 3rem 3.5rem;
            max-height: 100vh;
            background: linear-gradient(135deg, #006633 0%, #003d1f 50%, #004d26 100%);
        }
        
        .login-left::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="grid" width="100" height="100" patternUnits="userSpaceOnUse"><path d="M 100 0 L 0 0 0 100" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100%" height="100%" fill="url(%23grid)"/></svg>');
            opacity: 0.3;
            pointer-events: none;
            z-index: 1;
        }
        
        .login-left::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 50%;
            background: linear-gradient(to top, rgba(0,0,0,0.4) 0%, transparent 100%);
            pointer-events: none;
            z-index: 1;
        }
        
        .login-logo {
            position: relative;
            z-index: 2;
            margin-bottom: 2rem;
            animation: fadeInDown 0.8s ease;
        }
        
        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .login-logo img {
            max-width: 350px;
            width: 100%;
            height: auto;
            background: rgba(255, 255, 255, 0.95);
            padding: 1.75rem;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            transition: transform 0.3s ease;
        }
        
        .login-logo img:hover {
            transform: scale(1.05);
        }
        
        .welcome-text {
            color: white;
            position: relative;
            z-index: 2;
            margin-top: 0;
            padding-bottom: 0;
            animation: fadeInUp 0.8s ease 0.2s both;
        }
        
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .welcome-text h1 {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 0.75rem;
            text-shadow: 0 4px 20px rgba(0,0,0,0.3);
            line-height: 1.1;
            letter-spacing: -1px;
            color: white;
        }
        
        .welcome-text h2 {
            font-size: 1.75rem;
            font-weight: 500;
            opacity: 0.95;
            text-shadow: 0 2px 10px rgba(0,0,0,0.2);
            line-height: 1.3;
            margin-bottom: 0.5rem;
            color: white;
        }
        
        .welcome-text p {
            font-size: 1.1rem;
            opacity: 0.9;
            text-shadow: 0 2px 8px rgba(0,0,0,0.2);
            color: white;
        }
        
        .login-right {
            flex: 0 0 55%;
            background: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 2.5rem;
            overflow-y: auto;
            max-height: 100vh;
            position: relative;
        }
        
        .login-right::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #006633 0%, #004d26 100%);
        }
        
        .login-form-container {
            width: 100%;
            max-width: 450px;
            animation: fadeIn 0.6s ease;
            margin: 0 auto;
        }
        
        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        .login-form-container::-webkit-scrollbar {
            width: 6px;
        }
        
        .login-form-container::-webkit-scrollbar-track {
            background: #f1f1f1;
        }
        
        .login-form-container::-webkit-scrollbar-thumb {
            background: #006633;
            border-radius: 3px;
        }
        
        .login-form-header {
            margin-bottom: 1.5rem;
            text-align: center;
        }
        
        .login-form-header h2 {
            font-size: 1.75rem;
            font-weight: 700;
            color: #003d1f;
            margin-bottom: 0.25rem;
            letter-spacing: -0.5px;
        }
        
        .login-form-header p {
            color: #718096;
            font-size: 0.875rem;
            font-weight: 500;
        }
        
        .form-group-wrapper {
            position: relative;
            margin-bottom: 0.875rem;
        }
        
        .form-label {
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 0.4rem;
            font-size: 0.875rem;
            display: flex;
            align-items: center;
            gap: 0.4rem;
        }
        
        .form-label i {
            color: #006633;
            font-size: 0.95rem;
        }
        
        .input-wrapper {
            position: relative;
        }
        
        .input-icon {
            position: absolute;
            left: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            color: #a0aec0;
            font-size: 0.95rem;
            pointer-events: none;
            transition: color 0.3s ease;
        }
        
        .form-control {
            border: 1.5px solid #e2e8f0;
            border-radius: 6px;
            padding: 0.6rem 0.75rem 0.6rem 2.5rem;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            background: #f7fafc;
            color: #2d3748;
            width: 100%;
        }
        
        .form-control:focus {
            border-color: #006633;
            box-shadow: 0 0 0 3px rgba(0, 102, 51, 0.1);
            outline: none;
            background: #ffffff;
        }
        
        .form-control:focus + .input-icon {
            color: #006633;
        }
        
        .form-control::placeholder {
            color: #a0aec0;
            font-size: 0.85rem;
        }
        
        .form-text {
            font-size: 0.75rem;
            color: #718096;
            margin-top: 0.25rem;
            display: block;
        }
        
        .forgot-password {
            text-align: right;
            margin-top: 0.25rem;
            margin-bottom: 0.875rem;
        }
        
        .forgot-password a {
            color: #006633;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            transition: color 0.2s ease;
        }
        
        .forgot-password a:hover {
            color: #004d26;
            text-decoration: underline;
        }
        
        .form-check {
            margin-bottom: 0.875rem;
        }
        
        .form-check-input {
            width: 1.1em;
            height: 1.1em;
            margin-top: 0.2em;
            border: 1.5px solid #e2e8f0;
            border-radius: 4px;
            cursor: pointer;
        }
        
        .form-check-input:checked {
            background-color: #006633;
            border-color: #006633;
        }
        
        .form-check-input:focus {
            border-color: #006633;
            box-shadow: 0 0 0 3px rgba(0, 102, 51, 0.1);
        }
        
        .form-check-label {
            color: #4a5568;
            font-size: 0.875rem;
            margin-left: 0.4rem;
            cursor: pointer;
        }
        
        .btn-signin {
            background: linear-gradient(135deg, #006633 0%, #004d26 100%);
            border: none;
            color: white;
            padding: 0.75rem 1.5rem;
            font-size: 0.95rem;
            font-weight: 700;
            border-radius: 6px;
            width: 100%;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-top: 0.25rem;
            box-shadow: 0 2px 8px rgba(0, 102, 51, 0.3);
            position: relative;
            overflow: hidden;
        }
        
        .btn-signin::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }
        
        .btn-signin:hover::before {
            left: 100%;
        }
        
        .btn-signin:hover {
            background: linear-gradient(135deg, #004d26 0%, #003d1f 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 102, 51, 0.5);
        }
        
        .btn-signin:active {
            transform: translateY(0);
        }
        
        .btn-signin:disabled {
            background: #cbd5e0;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }
        
        /* Alphanumeric Captcha Styles */
        .captcha-container {
            background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
            border: 1.5px solid #e2e8f0;
            border-radius: 8px;
            padding: 0.875rem;
            margin-bottom: 0.875rem;
            box-shadow: 0 1px 4px rgba(0,0,0,0.05);
        }
        
        .captcha-title {
            display: flex;
            align-items: center;
            gap: 0.4rem;
            margin-bottom: 0.75rem;
            font-weight: 600;
            color: #2d3748;
            font-size: 0.875rem;
        }
        
        .captcha-title i {
            color: #006633;
            font-size: 1rem;
        }
        
        .captcha-image-wrapper {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.75rem;
        }
        
        .captcha-image {
            flex: 1;
            height: 50px;
            border-radius: 6px;
            overflow: hidden;
            background: white;
            border: 1.5px solid #e2e8f0;
            box-shadow: 0 1px 4px rgba(0,0,0,0.08);
        }
        
        .captcha-image img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
        
        .btn-refresh-captcha {
            width: 40px;
            height: 40px;
            border: 1.5px solid #006633;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            flex-shrink: 0;
            box-shadow: 0 1px 4px rgba(0, 102, 51, 0.2);
        }
        
        .btn-refresh-captcha:hover {
            background: #006633;
            transform: rotate(180deg) scale(1.05);
            box-shadow: 0 2px 8px rgba(0, 102, 51, 0.4);
        }
        
        .btn-refresh-captcha i {
            font-size: 1rem;
            color: #006633;
            transition: color 0.3s ease;
        }
        
        .btn-refresh-captcha:hover i {
            color: white;
        }
        
        .captcha-input-group {
            display: flex;
            gap: 0.4rem;
        }
        
        .captcha-input {
            flex: 1;
            border: 1.5px solid #e2e8f0;
            border-radius: 6px;
            padding: 0.6rem 0.75rem;
            font-size: 1rem;
            font-weight: 700;
            letter-spacing: 3px;
            text-transform: uppercase;
            text-align: center;
            transition: all 0.3s ease;
            background: white;
            color: #2d3748;
        }
        
        .captcha-input:focus {
            border-color: #006633;
            box-shadow: 0 0 0 3px rgba(0, 102, 51, 0.1);
            outline: none;
        }
        
        .captcha-input::placeholder {
            letter-spacing: normal;
            font-weight: normal;
            font-size: 0.9rem;
            text-transform: none;
            color: #a0aec0;
        }
        
        .form-links {
            margin-top: 1rem;
            padding-top: 0.875rem;
            border-top: 1.5px solid #e2e8f0;
            text-align: center;
        }
        
        .form-links p {
            color: #718096;
            margin-bottom: 0.5rem;
            font-size: 0.85rem;
        }
        
        .form-links a {
            color: #006633;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.2s ease;
        }
        
        .form-links a:hover {
            color: #004d26;
            text-decoration: underline;
        }
        
        .alert-danger {
            border-radius: 10px;
            border: 2px solid #fc8181;
            background: #fed7d7;
            color: #c53030;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            font-size: 0.95rem;
        }
        
        .text-danger {
            color: #e53e3e !important;
            font-size: 0.875rem;
            margin-top: 0.5rem;
            display: block;
        }
        
        .text-muted {
            color: #718096 !important;
            font-size: 0.875rem;
        }
        
        @@media (max-width: 992px) {
            .login-wrapper {
                flex-direction: column;
            }
            
            .login-left {
                flex: 0 0 250px;
                padding: 2rem;
            }
            
            .welcome-text h1 {
                font-size: 2rem;
            }
            
            .welcome-text h2 {
                font-size: 1.4rem;
            }
            
            .login-right {
                flex: 1;
                padding: 2rem 1.5rem;
            }
        }
        
        @@media (max-width: 768px) {
            .login-left {
                flex: 0 0 200px;
                padding: 1.5rem;
            }
            
            .login-logo img {
                max-width: 220px;
            }
            
            .welcome-text h1 {
                font-size: 1.75rem;
            }
            
            .welcome-text h2 {
                font-size: 1.2rem;
            }
            
            .login-form-header h2 {
                font-size: 2rem;
            }
        }
        
        @@media (max-width: 576px) {
            .login-left {
                display: none;
            }
            
            .login-right {
                flex: 1;
                padding: 2rem 1.25rem;
            }
            
            .login-form-container {
                max-width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="login-wrapper">
        <!-- Left Side - Background with Logo -->
        <div class="login-left">
            <div class="login-logo">
                <img src="~/Screenshot 2025-12-23 222311.png" alt="Ministry of Foreign Affairs" />
            </div>
            <div class="welcome-text">
                <h1>Welcome To</h1>
                <h2>Document Attestation Portal</h2>
                <p>Ministry of Foreign Affairs</p>
            </div>
        </div>
        
        <!-- Right Side - Login Form -->
        <div class="login-right">
            <div class="login-form-container">
                <div class="login-form-header">
                    <h2>Sign In</h2>
                    <p>Document Attestation Portal - E Services</p>
                </div>
                
                <form asp-action="Login" method="post" id="loginForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group-wrapper">
                        <label asp-for="Login" class="form-label">
                            <i class="bi bi-person-fill"></i>
                            CNIC/Passport/Email *
                        </label>
                        <div class="input-wrapper">
                            <i class="bi bi-envelope input-icon"></i>
                            <input asp-for="Login" class="form-control" placeholder="Please Enter CNIC/Passport/Email" autocomplete="username" />
                        </div>
                        <span asp-validation-for="Login" class="text-danger"></span>
                        <small class="form-text">Enter your CNIC/Passport/Email</small>
                    </div>

                    <div class="form-group-wrapper">
                        <label asp-for="Password" class="form-label">
                            <i class="bi bi-lock-fill"></i>
                            Password *
                        </label>
                        <div class="input-wrapper">
                            <i class="bi bi-key input-icon"></i>
                            <input asp-for="Password" class="form-control" placeholder="Please Enter Password" autocomplete="current-password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="forgot-password">
                        <a href="#" onclick="alert('Please contact administrator for password reset.'); return false;">FORGOT PASSWORD ?</a>
                    </div>

                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">
                            Remember me
                        </label>
                    </div>

                    <!-- Alphanumeric CAPTCHA -->
                    <div class="captcha-container">
                        <div class="captcha-title">
                            <i class="bi bi-shield-lock-fill"></i>
                            <span>Security Verification</span>
                        </div>
                        
                        <div class="captcha-image-wrapper">
                            <div class="captcha-image">
                                <img src="@Model.CaptchaImageUrl" id="captchaImage" alt="Captcha Code" />
                            </div>
                            <button type="button" class="btn-refresh-captcha" onclick="refreshCaptcha()" title="Refresh Captcha">
                                <i class="bi bi-arrow-clockwise"></i>
                            </button>
                        </div>
                        
                        <div class="captcha-input-group">
                            <input type="text" 
                                   asp-for="CaptchaAnswer" 
                                   id="CaptchaAnswer" 
                                   class="captcha-input" 
                                   placeholder="Enter code above"
                                   maxlength="5"
                                   autocomplete="off"
                                   oninput="checkCaptchaInput()" />
                        </div>
                        
                        <input type="hidden" asp-for="CaptchaChallengeId" id="CaptchaChallengeId" />
                    </div>

                    <button type="submit" class="btn btn-signin" id="submitBtn" disabled>
                        SIGN IN
                    </button>
                </form>
                
                <div class="form-links">
                    <p>Don't Have An Account Yet? <a asp-action="Register">Sign Up</a></p>
                    <p class="mb-0">Need Help? <a href="#" onclick="alert('Contact support for assistance.'); return false;">Go To Online Help</a></p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function checkCaptchaInput() {
            const captchaInput = document.getElementById('CaptchaAnswer');
            const submitBtn = document.getElementById('submitBtn');
            
            // Enable submit button when captcha has 5 characters
            if (captchaInput.value.length >= 5) {
                submitBtn.disabled = false;
                captchaInput.style.borderColor = '#006633';
            } else {
                submitBtn.disabled = true;
                captchaInput.style.borderColor = '#dee2e6';
            }
        }
        
        function refreshCaptcha() {
            const btn = document.querySelector('.btn-refresh-captcha');
            btn.style.transform = 'rotate(360deg)';
            
            $.get('@Url.Action("GetCaptcha", "Account")', function(data) {
                $('#captchaImage').attr('src', data.imageUrl);
                $('#CaptchaChallengeId').val(data.challengeId);
                $('#CaptchaAnswer').val('').focus();
                $('#submitBtn').prop('disabled', true);
                document.getElementById('CaptchaAnswer').style.borderColor = '#dee2e6';
                
                setTimeout(() => {
                    btn.style.transform = 'rotate(0deg)';
                }, 300);
            }).fail(function() {
                btn.style.transform = 'rotate(0deg)';
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to refresh captcha. Please try again.'
                });
            });
        }
        
        // Auto-uppercase and filter input
        document.getElementById('CaptchaAnswer').addEventListener('input', function(e) {
            this.value = this.value.toUpperCase().replace(/[^A-Z0-9]/g, '');
            checkCaptchaInput();
        });
        
        // Enter key support
        $(document).ready(function() {
            $('#loginForm input').on('keypress', function(e) {
                if (e.which === 13 && !$('#submitBtn').prop('disabled')) {
                    e.preventDefault();
                    $('#loginForm').submit();
                }
            });
            
            // Debug: Log captcha values on form submit
            $('#loginForm').on('submit', function(e) {
                var challengeId = $('#CaptchaChallengeId').val();
                var captchaAnswer = $('#CaptchaAnswer').val();
                console.log('Form Submit - ChallengeId:', challengeId, 'Answer:', captchaAnswer);
                
                if (!challengeId || challengeId.trim() === '') {
                    e.preventDefault();
                    alert('Error: Captcha challenge ID is missing. Please refresh the page.');
                    return false;
                }
            });
            
            // Log initial captcha values
            console.log('Initial ChallengeId:', $('#CaptchaChallengeId').val());
        });
    </script>
</body>
</html>
