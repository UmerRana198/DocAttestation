@model DocAttestation.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Document Attestation Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            height: 100vh;
            overflow: hidden;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }
        
        .login-wrapper {
            display: flex;
            height: 100vh;
            max-height: 100vh;
            overflow: hidden;
        }
        
        .login-left {
            flex: 1;
            background-image: url('@Url.Content("~/Gemini_Generated_Image_xk9i7jxk9i7jxk9i.png")');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 2rem;
            max-height: 100vh;
        }
        
        .login-left::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(0, 77, 38, 0.2) 0%, rgba(0, 102, 51, 0.2) 25%, rgba(0, 128, 64, 0.2) 50%, rgba(0, 160, 80, 0.2) 75%, rgba(0, 192, 96, 0.2) 100%);
            pointer-events: none;
            z-index: 1;
        }
        
        .login-left::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 40%;
            background: linear-gradient(to top, rgba(0,0,0,0.3) 0%, transparent 100%);
            pointer-events: none;
            z-index: 1;
        }
        
        .login-logo {
            position: relative;
            z-index: 2;
        }
        
        .login-logo img {
            max-width: 200px;
            height: auto;
            margin-bottom: 1rem;
            background: rgba(255, 255, 255, 0.15);
            padding: 0.5rem;
            border-radius: 8px;
            backdrop-filter: blur(3px);
        }
        
        .welcome-text {
            color: white;
            position: relative;
            z-index: 2;
            margin-top: auto;
            padding-bottom: 1.5rem;
            text-shadow: 2px 2px 6px rgba(0,0,0,0.6);
        }
        
        .welcome-text h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            line-height: 1.2;
        }
        
        .welcome-text h2 {
            font-size: 1.5rem;
            font-weight: 400;
            opacity: 0.95;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
            line-height: 1.3;
        }
        
        .login-right {
            flex: 0 0 500px;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
            overflow: hidden;
            max-height: 100vh;
        }
        
        .login-form-container {
            width: 100%;
            max-width: 420px;
            max-height: 100vh;
            overflow-y: auto;
            padding-right: 0.5rem;
        }
        
        .login-form-container::-webkit-scrollbar {
            width: 6px;
        }
        
        .login-form-container::-webkit-scrollbar-track {
            background: #f1f1f1;
        }
        
        .login-form-container::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 3px;
        }
        
        .login-form-header {
            margin-bottom: 1.5rem;
        }
        
        .login-form-header h2 {
            font-size: 2rem;
            font-weight: 700;
            color: #1a1a2e;
            margin-bottom: 0.5rem;
        }
        
        .login-form-header p {
            color: #6c757d;
            font-size: 0.95rem;
        }
        
        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }
        
        .form-control {
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        
        .form-control:focus {
            border-color: #006633;
            box-shadow: 0 0 0 0.2rem rgba(0, 102, 51, 0.15);
            outline: none;
        }
        
        .forgot-password {
            text-align: right;
            margin-top: 0.5rem;
            margin-bottom: 1.5rem;
        }
        
        .forgot-password a {
            color: #006633;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
        }
        
        .btn-signin {
            background: #006633;
            border: none;
            color: white;
            padding: 0.875rem 2rem;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 8px;
            width: 100%;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .btn-signin:hover {
            background: #004d26;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 102, 51, 0.3);
        }
        
        /* Alphanumeric Captcha Styles */
        .captcha-container {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border: 2px solid #dee2e6;
            border-radius: 12px;
            padding: 1rem;
            margin-bottom: 1rem;
        }
        
        .captcha-title {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.75rem;
            font-weight: 600;
            color: #495057;
            font-size: 0.9rem;
        }
        
        .captcha-image-wrapper {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
        }
        
        .captcha-image {
            flex: 1;
            height: 60px;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        }
        
        .captcha-image img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
        
        .btn-refresh-captcha {
            width: 45px;
            height: 45px;
            border: 2px solid #006633;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .btn-refresh-captcha:hover {
            background: #006633;
            color: white;
            transform: rotate(180deg);
        }
        
        .btn-refresh-captcha i {
            font-size: 1.2rem;
            color: #006633;
        }
        
        .btn-refresh-captcha:hover i {
            color: white;
        }
        
        .captcha-input-group {
            display: flex;
            gap: 0.5rem;
        }
        
        .captcha-input {
            flex: 1;
            border: 2px solid #dee2e6;
            border-radius: 8px;
            padding: 0.6rem 1rem;
            font-size: 1.1rem;
            font-weight: 600;
            letter-spacing: 3px;
            text-transform: uppercase;
            text-align: center;
            transition: all 0.3s ease;
        }
        
        .captcha-input:focus {
            border-color: #006633;
            box-shadow: 0 0 0 0.2rem rgba(0, 102, 51, 0.15);
            outline: none;
        }
        
        .captcha-input::placeholder {
            letter-spacing: normal;
            font-weight: normal;
            font-size: 0.9rem;
            text-transform: none;
        }
        
        .form-links {
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid #e0e0e0;
            text-align: center;
        }
        
        .form-links p {
            color: #6c757d;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }
        
        .form-links a {
            color: #006633;
            text-decoration: none;
            font-weight: 600;
        }
        
        .alert-danger {
            border-radius: 8px;
            border: none;
            background: #fee;
            color: #c33;
            padding: 1rem;
        }
        
        @@media (max-width: 992px) {
            .login-wrapper {
                flex-direction: column;
            }
            
            .login-left {
                flex: 0 0 200px;
                padding: 2rem;
            }
            
            .welcome-text h1 {
                font-size: 2rem;
            }
            
            .welcome-text h2 {
                font-size: 1.5rem;
            }
            
            .login-right {
                flex: 1;
            }
        }
        
        @@media (max-width: 576px) {
            .login-left {
                display: none;
            }
            
            .login-right {
                flex: 1;
            }
        }
    </style>
</head>
<body>
    <div class="login-wrapper">
        <!-- Left Side - Background with Logo -->
        <div class="login-left">
            <div class="login-logo">
                <img src="~/Screenshot 2025-12-23 222311.png" alt="Ministry of Foreign Affairs" />
            </div>
            <div class="welcome-text">
                <h1 style="color: white;">Welcome To</h1>
                <h2 style="color: white;">Document Attestation Portal</h2>
                <p class="mt-3" style="font-size: 1.1rem; opacity: 0.9; color: white;">Ministry of Foreign Affairs</p>
            </div>
        </div>
        
        <!-- Right Side - Login Form -->
        <div class="login-right">
            <div class="login-form-container">
                <div class="login-form-header">
                    <h2>Sign In</h2>
                    <p>Document Attestation Portal - E Services</p>
                </div>
                
                <form asp-action="Login" method="post" id="loginForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                    <div class="mb-3">
                        <label asp-for="Login" class="form-label">CNIC/Passport/Email</label>
                        <input asp-for="Login" class="form-control" placeholder="Enter your CNIC/Passport/Email" autocomplete="username" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                        <small class="text-muted">Enter your CNIC/Passport/Email</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Enter your password" autocomplete="current-password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="forgot-password">
                        <a href="#" onclick="alert('Please contact administrator for password reset.'); return false;">FORGOT PASSWORD ?</a>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe" style="cursor: pointer;">
                            Remember me
                        </label>
                    </div>

                    <!-- Alphanumeric CAPTCHA -->
                    <div class="captcha-container">
                        <div class="captcha-title">
                            <i class="bi bi-shield-lock-fill text-success"></i>
                            <span>Security Verification</span>
                        </div>
                        
                        <div class="captcha-image-wrapper">
                            <div class="captcha-image">
                                <img src="@Model.CaptchaImageUrl" id="captchaImage" alt="Captcha Code" />
                            </div>
                            <button type="button" class="btn-refresh-captcha" onclick="refreshCaptcha()" title="Refresh Captcha">
                                <i class="bi bi-arrow-clockwise"></i>
                            </button>
                        </div>
                        
                        <div class="captcha-input-group">
                            <input type="text" 
                                   asp-for="CaptchaAnswer" 
                                   id="CaptchaAnswer" 
                                   class="captcha-input" 
                                   placeholder="Enter code above"
                                   maxlength="5"
                                   autocomplete="off"
                                   oninput="checkCaptchaInput()" />
                        </div>
                        
                        <input type="hidden" asp-for="CaptchaChallengeId" id="CaptchaChallengeId" />
                    </div>

                    <button type="submit" class="btn btn-signin" id="submitBtn" disabled>
                        SIGN IN
                    </button>
                </form>
                
                <div class="form-links">
                    <p>Don't Have An Account Yet? <a asp-action="Register">Sign Up</a></p>
                    <p class="mb-0">Need Help? <a href="#" onclick="alert('Contact support for assistance.'); return false;">Go To Online Help</a></p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function checkCaptchaInput() {
            const captchaInput = document.getElementById('CaptchaAnswer');
            const submitBtn = document.getElementById('submitBtn');
            
            // Enable submit button when captcha has 5 characters
            if (captchaInput.value.length >= 5) {
                submitBtn.disabled = false;
                captchaInput.style.borderColor = '#198754';
            } else {
                submitBtn.disabled = true;
                captchaInput.style.borderColor = '#dee2e6';
            }
        }
        
        function refreshCaptcha() {
            const btn = document.querySelector('.btn-refresh-captcha');
            btn.style.transform = 'rotate(360deg)';
            
            $.get('@Url.Action("GetCaptcha", "Account")', function(data) {
                $('#captchaImage').attr('src', data.imageUrl);
                $('#CaptchaChallengeId').val(data.challengeId);
                $('#CaptchaAnswer').val('').focus();
                $('#submitBtn').prop('disabled', true);
                document.getElementById('CaptchaAnswer').style.borderColor = '#dee2e6';
                
                setTimeout(() => {
                    btn.style.transform = 'rotate(0deg)';
                }, 300);
            }).fail(function() {
                btn.style.transform = 'rotate(0deg)';
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to refresh captcha. Please try again.'
                });
            });
        }
        
        // Auto-uppercase and filter input
        document.getElementById('CaptchaAnswer').addEventListener('input', function(e) {
            this.value = this.value.toUpperCase().replace(/[^A-Z0-9]/g, '');
            checkCaptchaInput();
        });
        
        // Enter key support
        $(document).ready(function() {
            $('#loginForm input').on('keypress', function(e) {
                if (e.which === 13 && !$('#submitBtn').prop('disabled')) {
                    e.preventDefault();
                    $('#loginForm').submit();
                }
            });
        });
    </script>
</body>
</html>
