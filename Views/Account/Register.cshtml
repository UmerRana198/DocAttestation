@model DocAttestation.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Document Attestation Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }
        
        .register-container {
            display: flex;
            min-height: 100vh;
        }
        
        .register-left {
            flex: 0 0 35%;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 2rem;
            overflow: hidden;
        }
        
        .register-left::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 800"><path d="M0,400 Q300,200 600,300 T1200,400 L1200,800 L0,800 Z" fill="rgba(0,0,0,0.3)"/></svg>') no-repeat bottom;
            background-size: cover;
            opacity: 0.5;
        }
        
        .register-left-content {
            position: relative;
            z-index: 2;
            color: white;
        }
        
        .hec-logo {
            width: 80px;
            height: 80px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
        }
        
        .hec-logo i {
            font-size: 2rem;
            color: #0066cc;
        }
        
        .welcome-text {
            font-size: 1.8rem;
            font-weight: 700;
            line-height: 1.2;
            margin-top: 1.5rem;
        }
        
        .register-right {
            flex: 0 0 65%;
            background: #f5f7fa;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        
        .register-form-card {
            background: white;
            border-radius: 12px;
            padding: 2.5rem;
            width: 100%;
            max-width: 650px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }
        
        .form-title {
            font-size: 2rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }
        
        .form-subtitle {
            font-size: 0.9rem;
            color: #7f8c8d;
            margin-bottom: 2rem;
        }
        
        .form-label {
            font-weight: 600;
            color: #2c3e50;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }
        
        .form-label .required {
            color: #e74c3c;
        }
        
        .form-control, .form-select {
            border: 1px solid #dee2e6;
            border-radius: 6px;
            padding: 0.75rem;
            font-size: 0.95rem;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #0066cc;
            box-shadow: 0 0 0 0.2rem rgba(0, 102, 204, 0.15);
        }
        
        .form-hint {
            font-size: 0.8rem;
            color: #7f8c8d;
            margin-top: 0.25rem;
            margin-bottom: 0.5rem;
        }
        
        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #7f8c8d;
            cursor: pointer;
            z-index: 10;
        }
        
        .password-wrapper {
            position: relative;
        }
        
        .phone-input-group {
            display: flex;
        }
        
        .country-code {
            width: 100px;
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
            border-right: none;
        }
        
        .phone-input {
            flex: 1;
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }
        
        .submit-btn {
            background: #28a745;
            border: none;
            color: white;
            font-weight: 600;
            padding: 0.875rem 2rem;
            border-radius: 6px;
            width: 100%;
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        
        .submit-btn:hover:not(:disabled) {
            background: #218838;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
        }
        
        .submit-btn:disabled {
            background: #6c757d;
            cursor: not-allowed;
        }
        
        .form-links {
            text-align: center;
            margin-top: 1.5rem;
        }
        
        .form-links a {
            color: #2c3e50;
            text-decoration: none;
            font-size: 0.9rem;
            margin: 0 0.5rem;
        }
        
        .form-links a:hover {
            color: #0066cc;
            text-decoration: underline;
        }
        
        /* Slider Captcha Styles */
        .slider-captcha-container {
            background: #f8f9fa;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            padding: 1rem;
            margin-bottom: 1rem;
        }
        
        .slider-captcha-title {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.75rem;
            font-weight: 600;
            color: #495057;
        }
        
        .captcha-image-container {
            position: relative;
            width: 100%;
            height: 150px;
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 0.75rem;
            background: #e9ecef;
        }
        
        .captcha-background {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .captcha-puzzle-piece {
            position: absolute;
            width: 54px;
            height: 54px;
            left: 0;
            pointer-events: none;
            transition: left 0.01s linear;
        }
        
        .captcha-puzzle-piece.correct {
            filter: drop-shadow(0 0 6px #28a745);
        }
        
        .slider-track {
            position: relative;
            width: 100%;
            height: 40px;
            background: linear-gradient(to right, #e9ecef, #dee2e6);
            border-radius: 20px;
            overflow: hidden;
            border: 2px solid #dee2e6;
        }
        
        .slider-progress {
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 0;
            background: linear-gradient(to right, #28a745, #20c997);
            border-radius: 20px 0 0 20px;
        }
        
        .slider-handle {
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 45px;
            height: 35px;
            background: white;
            border-radius: 17px;
            border: 2px solid #28a745;
            cursor: grab;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
            z-index: 10;
        }
        
        .slider-handle i {
            color: #28a745;
            font-size: 1rem;
        }
        
        .slider-text {
            position: absolute;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
            font-size: 0.85rem;
            pointer-events: none;
            user-select: none;
        }
        
        .captcha-status {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-top: 0.5rem;
            font-size: 0.85rem;
        }
        
        .captcha-status.success {
            color: #198754;
        }
        
        .captcha-refresh {
            display: flex;
            justify-content: flex-end;
            margin-top: 0.5rem;
        }
        
        .btn-refresh {
            border: 1px solid #28a745;
            color: #28a745;
            background: white;
            border-radius: 6px;
            padding: 0.3rem 0.6rem;
            font-size: 0.8rem;
        }
        
        .btn-refresh:hover {
            background: #28a745;
            color: white;
        }
        
        @@media (max-width: 992px) {
            .register-container {
                flex-direction: column;
            }
            
            .register-left {
                flex: 0 0 auto;
                min-height: 250px;
            }
            
            .register-right {
                flex: 1;
            }
            
            .welcome-text {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-left">
            <div class="register-left-content">
                <div class="hec-logo">
                    <i class="bi bi-shield-check"></i>
                </div>
                <h1 class="welcome-text">Welcome To<br>Document Attestation Portal</h1>
            </div>
        </div>
        
        <div class="register-right">
            <div class="register-form-card">
                <h2 class="form-title">Sign Up</h2>
                <p class="form-subtitle">Document Attestation Portal - E Services</p>
                
                <form id="registerForm" asp-action="Register" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CNIC" class="form-label">
                                CNIC Number <span class="required">*</span>
                            </label>
                            <input asp-for="CNIC" class="form-control" placeholder="Please Enter CNIC without dashes e.g: 3520212345678" maxlength="13" />
                            <span asp-validation-for="CNIC" class="text-danger"></span>
                            <div class="form-hint">Please Enter CNIC without dashes e.g: 4123456222222</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="MobileNumber" class="form-label">
                                Primary Cell Phone Number <span class="required">*</span>
                            </label>
                            <div class="phone-input-group">
                                <select class="form-select country-code">
                                    <option value="+92">ðŸ‡µðŸ‡° +92</option>
                                </select>
                                <input asp-for="MobileNumber" class="form-control phone-input" placeholder="Please Enter Cell No. e.g: 3472748202" />
                            </div>
                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                            <div class="form-hint">Please Enter Cell No. in correct format e.g: +92 3472748202</div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">
                            Primary Email <span class="required">*</span>
                        </label>
                        <input asp-for="Email" class="form-control" placeholder="Please Enter Email e.g: username@provider.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <div class="form-hint">Please Enter Email in correct format e.g: username@provider.com</div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label">
                                Password <span class="required">*</span>
                            </label>
                            <div class="password-wrapper">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Please Enter Password" id="password" />
                                <button type="button" class="password-toggle" onclick="togglePassword('password', 'passwordToggle1')">
                                    <i class="bi bi-eye" id="passwordToggle1"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="form-hint">Enter Password should be atleast 8 characters long, alphanumeric and contain atleast one capital letter.</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">
                                Confirm Password <span class="required">*</span>
                            </label>
                            <div class="password-wrapper">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Please Enter password for confirmation" id="confirmPassword" />
                                <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword', 'passwordToggle2')">
                                    <i class="bi bi-eye" id="passwordToggle2"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <div class="form-hint">Please Enter password for confirmation</div>
                        </div>
                    </div>
                    
                    <!-- Slider CAPTCHA -->
                    <div class="slider-captcha-container">
                        <div class="slider-captcha-title">
                            <i class="bi bi-shield-check text-success"></i>
                            <span>Slide to Verify <span class="required">*</span></span>
                        </div>
                        
                        <!-- Captcha Image Area -->
                        <div class="captcha-image-container" id="captchaImageContainer">
                            <img src="@Model.CaptchaBackgroundImage" class="captcha-background" id="captchaBackground" alt="Captcha Background" />
                            <img src="@Model.CaptchaPuzzleImage" class="captcha-puzzle-piece" id="captchaPuzzle" alt="Puzzle Piece" style="top: @(Model.CaptchaPuzzleY)px;" />
                        </div>
                        
                        <!-- Slider Track -->
                        <div class="slider-track" id="sliderTrack">
                            <div class="slider-progress" id="sliderProgress"></div>
                            <div class="slider-text" id="sliderText">
                                <i class="bi bi-arrow-right me-2"></i> Drag to complete puzzle
                            </div>
                            <div class="slider-handle" id="sliderHandle">
                                <i class="bi bi-arrows"></i>
                            </div>
                        </div>
                        
                        <!-- Status -->
                        <div class="captcha-status" id="captchaStatus" style="display: none;">
                            <i class="bi bi-check-circle-fill"></i>
                            <span>Verification complete!</span>
                        </div>
                        
                        <!-- Refresh -->
                        <div class="captcha-refresh">
                            <button type="button" class="btn btn-refresh btn-sm" onclick="refreshCaptcha()">
                                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
                            </button>
                        </div>
                        
                        <!-- Hidden inputs -->
                        <input type="hidden" asp-for="CaptchaAnswer" id="CaptchaAnswer" />
                        <input type="hidden" asp-for="CaptchaChallengeId" id="CaptchaChallengeId" />
                        <input type="hidden" id="CaptchaPuzzleY" value="@Model.CaptchaPuzzleY" />
                    </div>
                    
                    <button type="submit" class="submit-btn" id="submitBtn" disabled>
                        SUBMIT
                    </button>
                </form>
                
                <div class="form-links">
                    <a asp-action="Login">Already Have An Account? Sign In</a><br>
                    <a href="#" onclick="alert('Manual download feature coming soon')">Any Confusion? Download Manual</a>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    <script>
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }
        
        // Slider Captcha Logic
        (function() {
            const sliderHandle = document.getElementById('sliderHandle');
            const sliderTrack = document.getElementById('sliderTrack');
            const sliderProgress = document.getElementById('sliderProgress');
            const sliderText = document.getElementById('sliderText');
            const puzzlePiece = document.getElementById('captchaPuzzle');
            const captchaAnswer = document.getElementById('CaptchaAnswer');
            const submitBtn = document.getElementById('submitBtn');
            const captchaStatus = document.getElementById('captchaStatus');
            const imageContainer = document.getElementById('captchaImageContainer');
            
            let isDragging = false;
            let startX = 0;
            let sliderPos = 0;
            let isVerified = false;
            
            const maxSlide = sliderTrack.offsetWidth - sliderHandle.offsetWidth;
            const imageWidth = imageContainer.offsetWidth;
            const puzzleWidth = 58;
            const maxPuzzleX = imageWidth - puzzleWidth - 10;
            
            function updatePosition(sliderX) {
                sliderPos = Math.max(0, Math.min(sliderX, maxSlide));
                sliderHandle.style.left = sliderPos + 'px';
                sliderProgress.style.width = sliderPos + 'px';
                
                const puzzleX = (sliderPos / maxSlide) * maxPuzzleX;
                puzzlePiece.style.left = puzzleX + 'px';
                captchaAnswer.value = Math.round(puzzleX);
            }
            
            function onDragStart(e) {
                if (isVerified) return;
                e.preventDefault();
                isDragging = true;
                startX = (e.type === 'mousedown') ? e.clientX : e.touches[0].clientX;
                sliderHandle.style.cursor = 'grabbing';
                sliderText.style.opacity = '0';
            }
            
            function onDragMove(e) {
                if (!isDragging) return;
                e.preventDefault();
                const clientX = (e.type === 'mousemove') ? e.clientX : e.touches[0].clientX;
                const diff = clientX - startX;
                startX = clientX;
                updatePosition(sliderPos + diff);
            }
            
            function onDragEnd() {
                if (!isDragging) return;
                isDragging = false;
                sliderHandle.style.cursor = 'grab';
                
                const puzzleX = parseInt(captchaAnswer.value) || 0;
                if (puzzleX > 50) {
                    showSuccess();
                }
            }
            
            function showSuccess() {
                isVerified = true;
                submitBtn.disabled = false;
                puzzlePiece.classList.add('correct');
                sliderHandle.innerHTML = '<i class="bi bi-check-lg"></i>';
                sliderHandle.style.borderColor = '#198754';
                sliderHandle.querySelector('i').style.color = '#198754';
                sliderProgress.style.background = 'linear-gradient(to right, #198754, #20c997)';
                captchaStatus.style.display = 'flex';
                captchaStatus.className = 'captcha-status success';
            }
            
            window.resetSliderUI = function() {
                sliderPos = 0;
                isVerified = false;
                updatePosition(0);
                sliderText.style.opacity = '1';
                puzzlePiece.classList.remove('correct');
                sliderHandle.innerHTML = '<i class="bi bi-arrows"></i>';
                sliderHandle.style.borderColor = '#28a745';
                sliderProgress.style.background = 'linear-gradient(to right, #28a745, #20c997)';
                submitBtn.disabled = true;
                captchaStatus.style.display = 'none';
            };
            
            sliderHandle.addEventListener('mousedown', onDragStart);
            document.addEventListener('mousemove', onDragMove);
            document.addEventListener('mouseup', onDragEnd);
            sliderHandle.addEventListener('touchstart', onDragStart, { passive: false });
            document.addEventListener('touchmove', onDragMove, { passive: false });
            document.addEventListener('touchend', onDragEnd);
            sliderHandle.addEventListener('selectstart', (e) => e.preventDefault());
        })();
        
        function refreshCaptcha() {
            $.get('@Url.Action("GetCaptcha", "Account")', function(data) {
                $('#captchaBackground').attr('src', data.backgroundImage);
                $('#captchaPuzzle').attr('src', data.puzzleImage);
                $('#captchaPuzzle').css('top', data.puzzleY + 'px');
                $('#CaptchaChallengeId').val(data.challengeId);
                $('#CaptchaPuzzleY').val(data.puzzleY);
                $('#CaptchaAnswer').val('');
                
                if (typeof resetSliderUI === 'function') {
                    resetSliderUI();
                }
            }).fail(function() {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to refresh captcha. Please try again.'
                });
            });
        }

        $(document).ready(function() {
            $('#registerForm').on('submit', function(e) {
                e.preventDefault();
                
                if (!$(this).valid()) {
                    return false;
                }
                
                var form = $(this);
                var submitButton = form.find('button[type="submit"]');
                submitButton.prop('disabled', true).text('Registering...');
                
                $.ajax({
                    url: form.attr('action'),
                    method: 'POST',
                    data: form.serialize(),
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: response.message,
                                confirmButtonText: 'Continue'
                            }).then(() => {
                                window.location.href = response.redirectUrl;
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: response.title || 'Error',
                                text: response.message
                            });
                            submitButton.prop('disabled', false).text('SUBMIT');
                            refreshCaptcha();
                        }
                    },
                    error: function(xhr, status, error) {
                        var errorMessage = 'An error occurred. Please try again.';
                        
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage = xhr.responseJSON.message;
                        }
                        
                        Swal.fire({
                            icon: 'error',
                            title: 'Registration Failed',
                            text: errorMessage
                        });
                        submitButton.prop('disabled', false).text('SUBMIT');
                        refreshCaptcha();
                    }
                });
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
</body>
</html>
